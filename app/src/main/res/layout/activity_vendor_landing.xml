<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendorLanding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="262dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="1dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher_foreground"
                />

            <TextView
                android:id="@+id/VendorLandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="- - - - - - - - - - "
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/VendorLandShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/VendorLandShopAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/VendorLandContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - "
            android:textSize="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="updateLocationVendor"
            android:text="Update location" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="updateWorkingHours"
            android:text="Update working hours" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:onClick="addMenu"
                android:layout_marginRight="5dp"
                android:text="Add new menu" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="addNewPost"
                android:layout_marginLeft="5dp"
                android:text="Add New post" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Menu:"
            android:textSize="20dp"/>

        <ListView
            android:id="@+id/listViewMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>