<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#778AD2E8"
    tools:context=".VendorLanding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="262dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="124dp"
                android:layout_height="150dp"
                android:backgroundTint="#E35C5C"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_portrait_24" />

            <TextView
                android:id="@+id/VendorLandShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="- - - - - - - - - - "
                android:textColor="@color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:id="@+id/VendorLandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:padding="5dp"
            android:id="@+id/VendorLandShopAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:padding="5dp"
            android:id="@+id/VendorLandContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - - - - - - - - - "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="updateLocationVendor"
            android:background="@drawable/button"
            android:layout_marginBottom="5dp"
            android:text="Update location" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="updateWorkingHours"
            android:text="Update working hours"
            android:background="@drawable/button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:onClick="addMenu"
                android:text="Add new menu" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:onClick="addNewPost"
                android:layout_marginLeft="5dp"
                android:text="Add New post" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Menu:"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ListView
            android:id="@+id/listViewMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_corner"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>